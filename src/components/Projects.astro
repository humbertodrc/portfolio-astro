---
import HtmlIcon from "./icons/HtmlIcon.astro";
import CssIcon from "./icons/CssIcon.astro";
import JavaScriptIcon from "./icons/JavaScriptIcon.astro";
import SassIcon from "./icons/SassIcon.astro";
import TailwindIcon from "./icons/TailwindIcon.astro";
import PhpIcon from "./icons/PhpIcon.astro";
import LaravelIcon from "./icons/LaravelIcon.astro";
import NextIcon from "./icons/NextIcon.astro";

const TAGS = {
	HTML: {
		name: "HTML",
		color: "bg-red-500 text-white",
		icon: HtmlIcon,
	},
	CSS: {
		name: "CSS",
		color: "bg-blue-500 text-white",
		icon: CssIcon,
	},
	JAVASCRIPT: {
		name: "JavaScript",
		color: "bg-yellow-500 text-black",
		icon: JavaScriptIcon,
	},
	SASS: {
		name: "SASS",
		color: "bg-pink-500 text-white",
		icon: SassIcon,
	},
	TAILWINDCSS: {
		name: "TailwindCSS",
		color: "bg-cyan-500 text-white",
		icon: TailwindIcon,
	},
	PHP: {
		name: "PHP",
		color: "bg-blue-500 text-white",
		icon: PhpIcon,
	},
	LARAVEL: {
		name: "Laravel",
		color: "bg-red-500 text-white",
		icon: LaravelIcon,
	},
	NEXT: {
		name: "Next.js",
		color: "bg-black text-white",
		icon: NextIcon,
	},
};

const PROJECTS = [
	{
		title: "Autorenta",
		description:
			"Sitio web de alquiler de autos, con sistema de reservas y pagos online. Desarrollado con Laravel y TailwindCSS. Para este proyecto tuve la oportunidad de trabajar en equipo y desarrollar el Frontend. Tambien trabaje en el desarrollo de algunas vistas del Backoffice.",
		image: "/images/auto-renta.webp",
		link: "https://autorenta.com/",
		// github: "https://github.com",
		tags: [
			TAGS.HTML,
			TAGS.CSS,
			TAGS.SASS,
			TAGS.TAILWINDCSS,
			TAGS.JAVASCRIPT,
			TAGS.PHP,
		],
	},
];
---

{
	PROJECTS.map((project) => (
		<article>
			<h3 class='text-xl font-semibold text-violet-400/90 mb-2'>
				{project.title}
			</h3>
			<p class='text-lg mb-4 text-pretty'>{project.description}</p>
			<ul class="flex items-center gap-4 mb-4">
				{project.tags.map((tag) => (
					<li>
						<span class="flex items-center justify-center gap-2 rounded-xl text-xs py-1 px-2 border border-violet-400/90">
							<tag.icon class='size-4 flex-shrink-0' />
							<span class="text-white">{tag.name}</span>
						</span>
					</li>
				))}
			</ul>
			<img
				class='rounded shadow-2xl shadow-white/10'
				src={project.image}
				alt={project.title}
			/>
		</article>
	))
}
