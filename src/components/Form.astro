<form class='flex flex-col space-y-4'>
	<div class="flex flex-col lg:flex-row lg:space-x-2 w-full">
		<div class='w-full flex flex-col space-y-2'>
			<label for='name' class='text-sm font-semibold'> Nombre </label>
			<input
				type='text'
				id='name'
				name='name'
				class='border border-gray-400 rounded-md p-2 bg-transparent text-white focus:outline-none focus:border-violet-400/70'
			/>
		</div>
		<div class='w-full flex flex-col space-y-2'>
			<label for='email' class='text-sm font-semibold'> Correo </label>
			<input
				type='email'
				id='email'
				name='email'
				class='border border-gray-400 rounded-md p-2 bg-transparent text-white focus:outline-none focus:border-violet-400/70'
			/>
		</div>
	</div>
	<div class='w-full flex flex-col space-y-2'>
		<label for='message' class='text-sm font-semibold'> Mensaje </label>
		<textarea
			id='message'
			name='message'
			class='border border-gray-400 rounded-md p-2 bg-transparent text-white focus:outline-none focus:border-violet-400/70'
		>
		</textarea>
	</div>
	<button 
    type='submit' 
    class='w-full lg:w-fit bg-violet-400/70 text-white font-semibold py-2 rounded-md hover:bg-violet-400/80 transition-colors px-4'
    > 
    Enviar 
  </button>
</form>
